generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // 部署时由Vercel自动填充
  directUrl = env("POSTGRES_URL_NON_POOLING") // 用于迁移
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  url       String   // 图片链接
  category  String   // 分类（如：风景、人像）
  createdAt DateTime @default(now())
}