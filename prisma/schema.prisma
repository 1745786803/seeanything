// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ✅ v5 版本必须写在这里
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  prompt    String?
  createdAt DateTime @default(now())
}